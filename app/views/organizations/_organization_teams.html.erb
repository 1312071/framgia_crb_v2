<% organization.teams.each do |team| %>
  <li>
    <%= link_to team.name, organization_team_path(organization, team) %>
    <% if can? :manage, team %>
      <%= link_to "", class: "rm-team", id: "#{team.id}",
        data: {organization: organization.id} do %>
        <i class="fa fa-times" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </li>
<% end %>
