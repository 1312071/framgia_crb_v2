<div class="form-group row">
  <div class="col-md-6">
    <fieldset class="fieldset-workspace">
      <legend class="legend-workspace">
        <% if f.object.new_record? %>
          <%= t ".workspace" %>
        <% else %>
          <%= f.object.name %>
        <% end %>
        <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe,
          "javascript:void(0)", onclick: "remove_fields(this)" %>
      </legend>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control",
        placeholder: t(".enter_workspace_name")	%>
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control",
        placeholder: t(".enter_workspace_address") %>
    </fieldset>
  </div>
</div>
