<div id="share-link">
  <% unless controller_name == "sessions" %>
    <%= link_to t("devise.sessions.log_in"),
      new_session_path(resource_name), class: "login" %><br/>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to t("devise.registrations.sign_up"),
      new_registration_path(resource_name), class: "signup" %><br/>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= link_to t("devise.omniauthable.sign_in_with",
        provider: OmniAuth::Utils.camelize(provider)),
        omniauth_authorize_path(resource_name, provider) %><br/>
    <% end %>
  <% end %>
</div>
