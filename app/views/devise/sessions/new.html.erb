<div id="Modal-signin" class="user-modal">
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">Ã—</span>
    </div>
    <div id="sign-in">
      <%= form_for resource, as: resource_name,
        url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control",
            placeholder: t("devise.sessions.enter_email") %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off",
            placeholder: t("devise.sessions.enter_password"),
            class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "remember" %>
          </div>
        <% end %>

        <div class="login-button">
          <%= f.submit t("devise.sessions.log_in"),
            class: "btn rc-button rc-button-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
