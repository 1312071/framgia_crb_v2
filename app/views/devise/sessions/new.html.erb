<div id="sign-in">
  <div class="sign-in-form-box">
    <div class="sign-in-left">
      <h2>
        <%= t "devise.registrations.need_account" %>
      </h2>
      <p>
        <%= t "devise.registrations.access_service" %>
      </p>
      <center>
        <%= image_tag "schedule.png" %>
      </center>
    </div>
    <div id="sign-in-form">
      <div class="form-body">
        <%= form_for resource, as: resource_name,
          url: session_path(resource_name) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "form-control",
              placeholder: t("devise.sessions.enter_email") %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off",
              placeholder: t("devise.sessions.enter_password"),
              class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "remember" %>
            </div>
          <% end %>
          
          <div class="login-button">
            <div class="center">
              <%= f.submit t("devise.sessions.log_in"),
                class: "rc-button rc-button-submit" %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
