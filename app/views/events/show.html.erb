<%= @event.title %><br/>
<%= l @event.start_date, format: t("events.time.formats.date_format") %></br/>
<%= l @event.finish_date, format: t("events.time.formats.date_format") %></br/>
<%= @event.description %><br/>
<%= @event.owner_name %><br/>
<% @event.attendees.each do |attendee| %>
  <li>
    <%= attendee.user_name %>
    <%= link_to t("events.buttons.delete"),
      user_event_attendee_path(current_user, @event, attendee),
      method: :delete, data: {confirm: t("events.confirm.delete")},
      remote: true, class: "delete_attendee" %>
  </li>
<% end %>
<li>
  <%= link_to t("events.buttons.delete"),
    user_event_path(current_user, @event), method: :delete,
    data: {confirm: t("events.confirm.delete")} %>
</li>
