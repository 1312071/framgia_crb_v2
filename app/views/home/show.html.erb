<div id="modal-signin" class="user-modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><%= t ".sign_in" %><span class="close">×</span></h2>
    </div>
    <div id="signin_error_message"></div>
    <div id="sign-in">
      <%= form_for resource, as: resource_name, remote: :true, format: :json,
        url: session_path(resource_name) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control",
            placeholder: t(".email") %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off",
            placeholder: t(".password"),
            class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.label :remember_me, class: "remember" do %>
              <%= f.check_box :remember_me %> <%= t ".remember" %>
            <% end %>
          </div>
        <% end %>

        <div class="login-button">
          <%= f.submit t("devise.sessions.log_in"),
            class: "btn rc-button rc-button-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links", target: :signin %>
    </div>
  </div>
</div>

<div id="modal-signup" class="user-modal">
  <div class="modal-content">
    <div class="modal-header">
     <h2><%= t ".sign_up" %><span class="close">×</span></h2>
    </div>
    <div id="signup_error_message"></div>
    <div id="sign-up">
      <%= form_for resource, as: resource_name,remote: :true, format: :json,
        url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>
        <div class="field" >
          <%= f.label :name, for: "signup_name" %>
          <%= f.text_field :name, placeholder: t(".name"),
            class: "form-control", id: "signup_name" %>
        </div>

        <div class="field">
          <%= f.label :email, for: "signup_email" %>
          <%= f.email_field :email, autofocus: true, placeholder: t(".email"),
            class: "form-control", id: "signup_email" %>
        </div>

        <div class="field">
          <%= f.label :password, for: "signup_password" %>
          <% if @minimum_password_length %>
            <em>
              <small>(<%= @minimum_password_length %> <%= t "devise.registrations.minimum" %>)</small>
            </em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: t(".password"),
            class: "form-control", id: "signup_password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, for: "signup_password_confirmation" %>
          <%= f.password_field :password_confirmation, autocomplete: "off",
            placeholder: t(".password_confirmation"),
            class: "form-control", id: "signup_password_confirmation" %>
        </div>

        <div class="signup-button">
          <%= f.submit t("devise.registrations.sign_up"),
            class: "btn rc-button rc-button-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links", target: :signup %>
    </div>
  </div>
</div>
