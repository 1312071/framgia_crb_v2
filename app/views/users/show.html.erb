<div id="update-profile">
  <div id="change-profile-form">
    <h2><%= t "devise.registrations.edit" %></h2>

    <%= form_for resource, as: resource_name, url: registration_path(resource_name),
      html: {method: :put} do |f| %>
      <%= devise_error_messages! %>
      <div class="field" >
        <div class="field-name">
          <%= f.label :name %>
        </div>
        <div class="form">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="field">
        <div class="field-name">
          <%= f.label :email %>
        </div>
        <div class="form">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t "devise.registrations.waiting_confirmation" %>:
          <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <div class="field-name">
          <%= f.label :current_password %>
        </div>
        <div class="form">
          <small><i>(<%= t "devise.registrations.confirm_current_password" %>)</i></small>
          <%= f.password_field :current_password, autocomplete: "off",
            class: "form-control" %>
        </div>
      </div>

      <div class="field">
        <div class="field-name">
          <%= f.label :chatwork_id %>
        </div>
        <div class="form">
          <%= f.text_field :chatwork_id, autocomplete: "off",
            class: "form-control" %>
        </div>
      </div>

      <div class="field">
        <div class="field-name">
          <%= f.label :google_calendar_id %>
        </div>
        <div class="form">
          <%= f.text_field :google_calendar_id, autocomplete: "off",
            class: "form-control" %>
        </div>
      </div>

      <%= f.fields_for :setting do |ff| %>
        <div class="field">
          <div class="field-name">
            <%= ff.label :timezone_name %>
          </div>
          <div class="form">
            <%= ff.text_field :timezone_name, autocomplete: "off",
              class: "form-control" %>
          </div>
        </div>

        <div class="field">
          <div class="field-name">
            <%= ff.label :country %>
          </div>
          <div class="form">
            <%= ff.text_field :country, autocomplete: "off",
              class: "form-control" %>
          </div>
        </div>
      <% end %>

      <%= f.submit t("devise.registrations.update"),
        class: "btn rc-button rc-button-submit",
        data: {confirm: t("devise.passwords.confirm_change")} %>
    <% end %>

    <button id="my-btn", class="btn btn-default", onclick="myModal()">
      <%= t "devise.passwords.change_password" %>
    </button>

    <div id="my-modal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" id="close" class="right" onclick="closeModal()">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_for resource, as: resource_name,
            url: registration_path(resource_name), html: {method: :put} do |f| %>
            <%= devise_error_messages! %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div><%= t "devise.registrations.waiting_confirmation" %>:
                <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <div class="field-name">
                <%= f.label :password %>
              </div>
              <div class="form">
                <small><i>(<%= t "devise.registrations.leave_blank" %>)</i></small>
                <%= f.password_field :password, autocomplete: "off",
                  class: "form-control" %>
              </div>
            </div>

            <div class="field">
              <div class="field-name">
                <%= f.label :password_confirmation %>
              </div>
              <div class="form">
                <%= f.password_field :password_confirmation, autocomplete: "off",
                  class: "form-control" %>
              </div>
            </div>

            <div class="field">
              <div class="field-name">
                <%= f.label :current_password %>
              </div>
              <div class="form">
                <small><i>(<%= t "devise.registrations.confirm_current_password" %>)</i></small>
                <%= f.password_field :current_password, autocomplete: "off",
                  class: "form-control" %>
              </div>
            </div>

            <%= f.submit t("devise.registrations.update"),
              class: "btn rc-button rc-button-submit",
              data: {confirm: t("devise.passwords.confirm_change")} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
