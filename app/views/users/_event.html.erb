<% events.each do |event| %>
  <li>
    <b><%= link_to event.title, edit_user_event_path(user, event) %></b>
    <div class="time-event">
      <%= t "user.info.events.start" %>
      <b><%= l event.start_date, format: t("events.time.formats.date_format") %></b>
      <%= t "user.info.events.finish" %>
      <b><%= l event.finish_date, format: t("events.time.formats.date_format") %></b>
    </div>
    <div class="calendar-event" ><%= t "user.info.events.calendar" %>
      <b><%= event.calendar.name %></b>
    </div>
  </li>
<% end %>
