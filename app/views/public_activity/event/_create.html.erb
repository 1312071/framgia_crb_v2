<li class="list-group-item">
  <span class="fa fa-calendar-check-o"></span>
  <small class="text-muted"><%= datetime_format activity.created_at, "datetime_format" %></small>
  <div>
    <strong><%= activity.owner_name %></strong>
      <%= t ".added_even" %><b><%= activity.event_title %></b>
      (<%= datetime_format activity.event_start_date, "datetime_format" %> -
      <%= datetime_format activity.event_finish_date, "datetime_format" %>)
      <%= t ".calendar" %><b><%= activity.calendar_name %></b>
  </div>
</li>
